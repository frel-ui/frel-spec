module blueprint.with_tooltip

import test.common.*

// Valid: all slots use `at` syntax
blueprint ButtonWithTooltip {
    button {
        at content: { text { "Save" } }
        at tooltip: {
            .. padding { 6 }
            .. background { color: #000000 }
            text { "Ctrl+S to save" }
        }
    }
}

// Valid: default content only (no tooltip)
blueprint SimpleButton {
    button { text { "Click" } }
}
