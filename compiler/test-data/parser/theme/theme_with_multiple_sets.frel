module theme.theme_with_multiple_sets

theme AppTheme {
    primaryColor : asset Color
    padding : u32 = 16
    cornerRadius : u32 = 8

    set button_style {
        corner_radius { cornerRadius }
        padding { padding }
        background { color: primaryColor }
    }

    set card_style {
        border { color: #CCCCCC width: 1 }
        corner_radius { 12 }
        padding { padding * 2 }
    }

    set input_style {
        border { color: #999999 width: 1 }
        corner_radius { 4 }
        padding { 8 }
    }
}
