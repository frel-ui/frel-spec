module theme.theme_with_multiple_variants

theme AppTheme {
    background : asset Color
    textColor : asset Color
    accentColor : asset Color
    padding : u32 = 16

    set container {
        background { color: background }
        padding { padding }
    }

    variant Dark {
        background = #1E1E1E
        textColor = #FFFFFF
        accentColor = #4A90D9
    }

    variant Light {
        background = #FFFFFF
        textColor = #1E1E1E
        accentColor = #0066CC
    }

    variant Compact {
        padding = 8
    }

    variant HighContrast {
        background = #000000
        textColor = #FFFFFF
        accentColor = #FFFF00
    }
}
