module control.repeat_with_key

import test.common.*

scheme Todo {
    id : Uuid .. identity
    text : String
    done : bool
}

backend TodoBackend {
    todos : List<Todo> = []
}

blueprint RepeatWithKey {
    with TodoBackend

    column {
        repeat on todos by todo.id { todo ->
            row {
                checkbox { todo.done }
                text { todo.text }
            }
        }
    }
}
