module test

scheme Todo {
    id : Uuid .. identity
    text : String
    done : bool
}

backend TodoBackend {
    todos : List<Todo> = []
}

blueprint RepeatWithKey {
    with TodoBackend

    column {
        repeat on todos as todo by todo.id {
            row {
                checkbox { todo.done }
                text { todo.text }
            }
        }
    }
}
