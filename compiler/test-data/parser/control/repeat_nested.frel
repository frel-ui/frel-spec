module control.repeat_nested

import test.common.*

scheme Category {
    name : String
    items : List<String>
}

backend CatalogBackend {
    categories : List<Category> = []
}

blueprint RepeatNested {
    with CatalogBackend

    column {
        repeat on categories { category ->
            column {
                repeat on category.items { item ->
                    row { 
                        text { category.name }
                        text { item }
                    }
                }
            }
        }
    }
}
