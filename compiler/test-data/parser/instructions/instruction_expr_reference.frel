module instructions.instruction_expr_reference

import test.common.*

scheme App {
   theme : AppTheme .. default { AppTheme }
}

blueprint InstructionExprReference {
    theme : AppTheme = AppTheme
    app: App = App {  }

    // simple field access reference
    box { }
        .. theme.primary_button

    // chained field access
    box { }
        .. app.theme.status_badge

    // reference combined with simple instructions
    box { }
        .. theme.card_style
        .. padding { 16 }
        .. margin { 8 }

    // multiple references
    box { }
        .. theme.base_style
        .. theme.highlighted
}
